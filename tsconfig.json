{
  "compilerOptions": {
    "outDir": "./dist",

    // Use classic Node CommonJS
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",

    // Node environment
    "types": ["node"],
    "lib": ["esnext"],

    // Other outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,

    // Stricter options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Turn OFF the advanced module flags causing errors
    "verbatimModuleSyntax": false,
    "isolatedModules": false,
    "moduleDetection": "auto",
    "skipLibCheck": true,

    // JSX not really needed for backend, but harmless:
    "jsx": "react-jsx",
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
